@model List<StudentBazaar.Web.Models.ShoppingCartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2 class="mt-3">Your Shopping Cart</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (!Model.Any())
{
    <p>Your shopping cart is empty.</p>
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
}
else
{
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 100px;">
                        @if (item.Listing?.Product?.Images != null && item.Listing.Product.Images.Any())
                        {
                            var mainImage = item.Listing.Product.Images.FirstOrDefault(i => i.IsMainImage) ?? item.Listing.Product.Images.First();
                            <img src="@mainImage.ImageUrl" alt="@item.Listing.Product.Name" class="img-thumbnail" style="height: 80px; width: 80px; object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </td>
                    <td>@item.Listing.Product.Name</td>
                    <td>@item.Listing.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Listing.Price* item.Quantity).ToString("C")</td>
                    <td>
                        <form asp-action="Remove" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="4" class="text-end">Grand Total:</th>
                <th colspan="2">@Model.Sum(i => i.Listing.Price * i.Quantity).ToString("C")</th>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
        <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">Checkout</a>
    </div>
}
