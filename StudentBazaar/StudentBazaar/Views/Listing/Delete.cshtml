@model StudentBazaar.Web.Models.Listing

@{
    ViewData["Title"] = "Delete Listing";
}

<h2 class="mt-3 text-danger">Delete Listing</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this listing?
</div>

<div class="card mb-3">
    <div class="card-body">
        <h4>@Model.Product?.Name</h4>
        <p class="text-muted">@Model.Description</p>
        <p><strong>Price:</strong> @Model.Price.ToString("F2")</p>
        <p><strong>Seller:</strong> @Model.Seller?.FullName</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
