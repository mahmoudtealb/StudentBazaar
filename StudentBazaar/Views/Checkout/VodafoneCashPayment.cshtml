@{
    ViewData["Title"] = "Vodafone Cash Payment";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

<style>
    .vodafone-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 40px;
        background: linear-gradient(135deg, #e10000 0%, #ff6b6b 100%);
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        color: white;
    }
    .vodafone-logo {
        font-size: 48px;
        font-weight: bold;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    .payment-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        color: #333;
        margin-top: 20px;
    }
    .phone-input {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        letter-spacing: 2px;
        border: 2px solid #e10000;
        border-radius: 10px;
        padding: 15px;
    }
    .btn-vodafone {
        background: #e10000;
        color: white;
        padding: 15px 40px;
        border-radius: 30px;
        border: none;
        font-size: 18px;
        font-weight: bold;
        transition: all 0.3s;
        width: 100%;
        margin-top: 20px;
    }
    .btn-vodafone:hover {
        background: #c10000;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }
    .qr-code {
        width: 200px;
        height: 200px;
        background: #f5f5f5;
        border: 3px solid #e10000;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 20px auto;
        font-size: 48px;
    }
    .instruction-box {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 15px;
        border-radius: 5px;
        margin: 20px 0;
    }
</style>

<div class="container">
    <div class="vodafone-container text-center">
        <div class="vodafone-logo">VODAFONE CASH</div>
        
        <h2 class="mb-4">Complete Your Payment</h2>
        
        <div class="payment-card">
            <h4 class="mb-3">Payment Details</h4>
            <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                <span class="text-muted">Amount to Pay:</span>
                <strong class="fs-4 text-danger">EGP @ViewBag.Amount</strong>
            </div>
            
            @if (!string.IsNullOrEmpty(ViewBag.Items?.ToString()))
            {
                <div class="mb-3 pb-3 border-bottom">
                    <small class="text-muted d-block mb-2">Items:</small>
                    <span>@ViewBag.Items</span>
                </div>
            }
            
            <div class="instruction-box text-start">
                <h6 class="mb-2"><i class="bi bi-info-circle"></i> Instructions:</h6>
                <ol class="mb-0 small">
                    <li>Enter your Vodafone Cash mobile number</li>
                    <li>Click "Pay Now" to proceed</li>
                    <li>You will receive a confirmation SMS</li>
                    <li>Confirm the payment on your phone</li>
                </ol>
            </div>
            
            <form asp-action="CompleteVodafoneCashPayment" method="post" id="vodafoneForm">
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label fw-bold">Vodafone Cash Number</label>
                    <input type="tel" 
                           class="form-control phone-input" 
                           id="phoneNumber" 
                           name="phoneNumber" 
                           placeholder="01XX XXX XXXX" 
                           pattern="[0-9]{11}" 
                           maxlength="11"
                           required>
                    <small class="text-muted">Enter your 11-digit Vodafone number</small>
                </div>
                
                <div class="qr-code">
                    <div class="text-muted">
                        <i class="bi bi-qr-code-scan"></i>
                        <small class="d-block mt-2">QR Code</small>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-vodafone">
                    <i class="bi bi-phone"></i> Pay Now with Vodafone Cash
                </button>
            </form>
            
            <a href="/Checkout" class="btn btn-link text-muted mt-3">Cancel Payment</a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Format phone number input
    document.addEventListener('DOMContentLoaded', function() {
        var phoneInput = document.getElementById('phoneNumber');
        if (phoneInput) {
            phoneInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 11) value = value.slice(0, 11);
                e.target.value = value;
            });
        }
    });
</script>

