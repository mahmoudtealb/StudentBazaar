@model StudentBazaar.Web.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        --danger-gradient: linear-gradient(135deg, #e10000 0%, #ff6b6b 100%);
        --shadow: 0 10px 40px rgba(0,0,0,0.1);
        --shadow-hover: 0 15px 50px rgba(0,0,0,0.15);
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .checkout-header {
        background: var(--primary-gradient);
        color: white;
        padding: 40px 20px;
        border-radius: 20px 20px 0 0;
        margin-bottom: 0;
        box-shadow: var(--shadow);
    }

    .checkout-container {
        max-width: 900px;
        margin: 30px auto;
    }

    .checkout-card {
        background: white;
        border-radius: 20px;
        box-shadow: var(--shadow);
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .checkout-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-hover);
    }

    .cart-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        margin: 0;
    }

    .cart-table {
        margin: 0;
    }

    .cart-table thead {
        background: #f8f9fa;
    }

    .cart-table tbody tr {
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.2s;
    }

    .cart-table tbody tr:hover {
        background: #f8f9fa;
    }

    .product-name {
        font-weight: 600;
        color: #333;
    }

    .summary-card {
        background: linear-gradient(135deg, #f5f7fa 0%, #ffffff 100%);
        border-left: 4px solid #667eea;
        padding: 25px;
        border-radius: 15px;
        margin-top: 20px;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #e0e0e0;
    }

    .summary-row:last-child {
        border-bottom: none;
        font-size: 1.3em;
        font-weight: bold;
        color: #667eea;
        margin-top: 10px;
        padding-top: 15px;
    }

    .payment-select-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        margin-top: 20px;
        border: 2px solid #e0e0e0;
        transition: border-color 0.3s;
    }

    .payment-select-card:focus-within {
        border-color: #667eea;
    }

    .form-select {
        padding: 15px;
        border-radius: 10px;
        border: 2px solid #e0e0e0;
        font-size: 16px;
        transition: all 0.3s;
    }

    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-checkout {
        background: var(--success-gradient);
        color: white;
        padding: 18px 40px;
        border-radius: 50px;
        border: none;
        font-size: 18px;
        font-weight: bold;
        width: 100%;
        margin-top: 20px;
        transition: all 0.3s;
        box-shadow: 0 5px 15px rgba(56, 239, 125, 0.3);
    }

    .btn-checkout:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(56, 239, 125, 0.4);
        color: white;
    }

    .alert {
        border-radius: 15px;
        border: none;
        padding: 20px;
        margin-bottom: 25px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .alert-info {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        color: #1565c0;
    }

    .alert-warning {
        background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
        color: #e65100;
    }

    .alert-danger {
        background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
        color: #c62828;
    }

    .free-shipping {
        color: #38ef7d;
        font-weight: bold;
        font-size: 1.1em;
    }

    .payment-method-icon {
        font-size: 1.2em;
        margin-right: 8px;
    }

    @@media (max-width: 768px) {
        .checkout-container {
            margin: 15px;
        }
        
        .checkout-header {
            padding: 30px 15px;
        }
    }
</style>

<div class="checkout-container">
    <div class="checkout-card">
        <!-- HEADER -->
        <div class="checkout-header text-center">
            <h1 class="fw-bold mb-2"><i class="bi bi-cart-check me-2"></i>Checkout</h1>
            <p class="mb-0">Review your items before completing your payment</p>
        </div>

        <div class="p-4">

            <!-- ERROR MESSAGES -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong><i class="bi bi-exclamation-triangle me-2"></i>Error!</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <strong><i class="bi bi-info-circle me-2"></i>Info:</strong> @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (ViewBag.StripeConfigured == false)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong><i class="bi bi-exclamation-triangle me-2"></i>Notice:</strong> Credit/Debit Card payment (Stripe) is currently unavailable. Please use an alternative payment method.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- CART ITEMS -->
            <div class="mb-4" style="border-radius: 15px; overflow: hidden; background: white; box-shadow: var(--shadow);">
                <div class="cart-header">
                    <h5 class="mb-0"><i class="bi bi-cart3 me-2"></i>Your Cart</h5>
                </div>
                <div class="p-0">
                    @if (Model.CartItems.Any())
                    {
                        <table class="table cart-table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4">Product</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end pe-4">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td class="product-name ps-4">@item.ProductName</td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary rounded-pill">@item.Quantity</span>
                                        </td>
                                        <td class="text-end">$@item.Price.ToString("F2")</td>
                                        <td class="text-end fw-bold pe-4">$@((item.Price * item.Quantity).ToString("F2"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-cart-x" style="font-size: 3em;"></i>
                            <p class="mt-3">Your cart is empty.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- SUMMARY & PAYMENT -->
            <div class="summary-card">
                <h5 class="mb-4"><i class="bi bi-receipt me-2"></i>Order Summary</h5>
                
                <div class="summary-row">
                    <span><i class="bi bi-cart me-2 text-muted"></i>Subtotal</span>
                    <strong>$@Model.Subtotal.ToString("F2")</strong>
                </div>
                <div class="summary-row">
                    <span><i class="bi bi-truck me-2 text-muted"></i>Shipping</span>
                    <strong class="free-shipping"><i class="bi bi-check-circle me-1"></i>FREE</strong>
                </div>
                <div class="summary-row">
                    <span><i class="bi bi-currency-dollar me-2"></i>Total</span>
                    <strong>$@Model.Total.ToString("F2")</strong>
                </div>
            </div>

            <div class="payment-select-card">
                <form asp-action="CompletePayment" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold mb-3">
                            <i class="bi bi-credit-card me-2"></i>Select Payment Method:
                        </label>
                        <select asp-for="SelectedPaymentMethod" class="form-select">
                            @if (ViewBag.StripeConfigured == true)
                            {
                                <option value="Card"><i class="bi bi-credit-card"></i> Credit/Debit Card (Stripe)</option>
                            }
                            else
                            {
                                <option value="Card" disabled><i class="bi bi-credit-card"></i> Credit/Debit Card (Stripe) - Not Available</option>
                            }
                            <option value="PayPal"><i class="bi bi-paypal"></i> PayPal</option>
                            <option value="VodafoneCash"><i class="bi bi-phone"></i> Vodafone Cash</option>
                        </select>
                        @if (ViewBag.StripeConfigured == false)
                        {
                            <small class="form-text text-muted mt-2">
                                <i class="bi bi-info-circle me-1"></i>Stripe payment gateway is not configured. Please use PayPal or Vodafone Cash.
                            </small>
                        }
                    </div>
                    <button type="submit" class="btn btn-checkout">
                        <i class="bi bi-lock-fill me-2"></i>Complete Payment
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
