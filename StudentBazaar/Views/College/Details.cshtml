@model StudentBazaar.Web.Models.College

@{
    ViewData["Title"] = "College Details";
}

<h2>College Details</h2>

<div class="card p-3">
    <h4>@Model.CollegeName</h4>
    <p><strong>University:</strong> @Model.University?.UniversityName</p>
    <p><strong>Created:</strong> @Model.CreatedAt</p>
    <p><strong>Updated:</strong> @Model.UpdatedAt</p>
</div>

<hr />

<h4>Majors</h4>
<ul class="list-group mb-3">
    @foreach (var major in Model.Majors)
    {
        <li class="list-group-item">@major.MajorName</li>
    }
</ul>

<h4>Users</h4>
<ul class="list-group mb-3">
    @foreach (var user in Model.Users)
    {
        <li class="list-group-item">@user.FullName</li>
    }
</ul>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
