@model IEnumerable<StudentBazaar.Web.Models.College>

@{
    ViewData["Title"] = "Colleges";
}

<h2>Colleges</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New College</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>College Name</th>
            <th>University</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var college in Model)
        {
            <tr>
                <td>@college.CollegeName</td>
                <td>@college.University?.UniversityName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@college.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@college.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@college.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
