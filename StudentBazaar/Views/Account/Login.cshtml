@using StudentBazaar.Web.Models.ViewModels
@model LoginViewModel

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-4">

        <div class="card shadow-sm">
            <div class="card-body">

                <h3 class="text-center mb-4">Student Bazaar</h3>

                <!-- FORM -->
                <form asp-action="Login" asp-controller="Account" method="post">

                    <!-- Validation -->
                    <div asp-validation-summary="All" class="text-danger mb-2"></div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Role -->
                    <div class="mb-3">
                        <label class="form-label">Login As</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Role" value="Student" checked="@(@Model.Role == "Student" || string.IsNullOrEmpty(@Model.Role))">
                            <label class="form-check-label">Student</label>
                        </div>
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="btn btn-primary w-100">Log In</button>

                    <!-- Forgot -->
                    <div class="text-center mt-3">
                        <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none">Forget Password?</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
