@model StudentBazaar.Web.ViewModels.ChatMyConversationsViewModel

@{
    ViewData["Title"] = "محادثاتى";
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="bi bi-chat-dots"></i> محادثاتك
    </h3>

    <div class="row">
        <!-- يمين: كمشتري -->
        <div class="col-lg-6 order-lg-2 mb-4">
            <h5 class="mb-3 text-end">كمشتري</h5>

            @if (Model.AsBuyer == null || !Model.AsBuyer.Any())
            {
                <p class="text-muted text-end">لا توجد محادثات كمشتري حتى الآن.</p>
            }
            else
            {
                @foreach (var c in Model.AsBuyer)
                {
                    <a asp-controller="Chat"
                       asp-action="Open"
                       asp-route-productId="@c.ProductId"
                       asp-route-otherUserId="@c.OtherUserId"
                       class="text-decoration-none text-dark">
                        <div class="card mb-2 shadow-sm">
                            <div class="card-body d-flex justify-content-between">
                                <div class="text-end flex-grow-1">
                                    <div class="fw-semibold">@c.ProductName</div>
                                    <div class="small text-muted">مع: @c.OtherUserName</div>
                                    <div class="small text-truncate">@c.LastMessage</div>
                                </div>
                                <div class="text-center ms-2">
                                    <div class="small text-muted">
                                        @c.LastMessageAt.ToLocalTime().ToString("HH:mm")
                                    </div>
                                    @if (c.UnreadCount > 0)
                                    {
                                        <span class="badge bg-danger">@c.UnreadCount</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                }
            }
        </div>

        <!-- شمال: كبائع -->
        <div class="col-lg-6 order-lg-1 mb-4">
            <h5 class="mb-3">كبائع</h5>

            @if (Model.AsSeller == null || !Model.AsSeller.Any())
            {
                <p class="text-muted">لا توجد محادثات كبائع حتى الآن.</p>
            }
            else
            {
                @foreach (var c in Model.AsSeller)
                {
                    <a asp-controller="Chat"
                       asp-action="Open"
                       asp-route-productId="@c.ProductId"
                       asp-route-otherUserId="@c.OtherUserId"
                       class="text-decoration-none text-dark">
                        <div class="card mb-2 shadow-sm">
                            <div class="card-body d-flex justify-content-between">
                                <div>
                                    <div class="fw-semibold">@c.ProductName</div>
                                    <div class="small text-muted">مع: @c.OtherUserName</div>
                                    <div class="small text-truncate">@c.LastMessage</div>
                                </div>
                                <div class="text-end ms-2">
                                    <div class="small text-muted">
                                        @c.LastMessageAt.ToLocalTime().ToString("HH:mm")
                                    </div>
                                    @if (c.UnreadCount > 0)
                                    {
                                        <span class="badge bg-danger">@c.UnreadCount</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card-body .small.text-truncate {
            max-width: 220px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
}
