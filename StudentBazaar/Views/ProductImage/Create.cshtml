@model StudentBazaar.Web.Models.ProductImage

@{
    ViewData["Title"] = "Add Product Image";
}

<h2 class="mt-3">Add Product Image</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IsMainImage"></label>
        <input asp-for="IsMainImage" type="checkbox" class="form-check-input" />
    </div>

    <div class="mb-3">
        <label asp-for="ProductId"></label>
        <input asp-for="ProductId" class="form-control" />
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
