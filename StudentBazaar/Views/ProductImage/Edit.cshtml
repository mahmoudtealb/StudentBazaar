@model StudentBazaar.Web.Models.ProductImage

@{
    ViewData["Title"] = "Edit Product Image";
}

<h2 class="mt-3">Edit Product Image</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="IsMainImage"></label>
        <input asp-for="IsMainImage" type="checkbox" class="form-check-input" />
    </div>

    <div class="mb-3">
        <label asp-for="ProductId"></label>
        <input asp-for="ProductId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
