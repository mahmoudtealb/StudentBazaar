@model IEnumerable<StudentBazaar.Web.Models.ProductImage>

@{
    ViewData["Title"] = "Product Images";
}

<h2 class="mt-3">Product Images</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add Image</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Is Main?</th>
            <th>Product</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>

                <td>
                    <img src="@item.ImageUrl" width="80" height="80" style="object-fit:cover;" />
                </td>

                <td>@item.IsMainImage</td>

                <td>@item.Product?.Name</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
