@model StudentBazaar.Web.ViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="mt-3">Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />

    <div class="mb-3">
        <label asp-for="Product.Name" class="form-label"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.CategoryId"></label>
        <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.Categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.StudyYearId"></label>
        <select asp-for="Product.StudyYearId" class="form-control" asp-items="Model.StudyYears">
            <option value="">-- Select Study Year --</option>
        </select>
        <span asp-validation-for="Product.StudyYearId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Upload New Images (Optional)</label>
        <input type="file" name="Files" multiple class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
