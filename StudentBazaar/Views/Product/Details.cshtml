@model StudentBazaar.Web.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h2 class="mt-3">Product Details</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">@Model.Name</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Product ID:</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Category:</dt>
                    <dd class="col-sm-9">@Model.Category?.CategoryName ?? "N/A"</dd>

                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9">
                        <strong class="text-success fs-5">@Model.Price.ToString("C")</strong>
                    </dd>

                    <dt class="col-sm-3">Created At:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-3">Updated At:</dt>
                        <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                    }

                    <dt class="col-sm-3">Images Count:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@(Model.Images?.Count ?? 0)</span>
                    </dd>

                    <dt class="col-sm-3">Listings Count:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-secondary">@(Model.Listings?.Count ?? 0)</span>
                    </dd>

                    <dt class="col-sm-3">Ratings Count:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-warning text-dark">@(Model.Ratings?.Count ?? 0)</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Product Images</h5>
            </div>
            <div class="card-body">
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="row g-2">
                        @foreach (var image in Model.Images)
                        {
                            <div class="col-6">
                                <img src="@image.ImageUrl" alt="@Model.Name"
                                     class="img-thumbnail w-100"
                                     style="height: 150px; object-fit: cover; cursor: pointer;"
                                     onclick="window.open('@image.ImageUrl', '_blank')" />
                                @if (image.IsMainImage)
                                {
                                    <small class="text-muted d-block text-center mt-1">Main Image</small>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No images available</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
</div>
