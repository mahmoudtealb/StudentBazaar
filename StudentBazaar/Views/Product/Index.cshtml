@model IEnumerable<StudentBazaar.Web.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2 class="mt-3">Products</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add New Product</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Study Year</th>
            <th>Images</th>
            <th>Listings</th>
            <th>Ratings</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Category?.CategoryName</td>
                <td>@item.StudyYear?.YearName</td>
                <td>@(item.Images.Count)</td>
                <td>@(item.Listings.Count)</td>
                <td>@(item.Ratings.Count)</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
