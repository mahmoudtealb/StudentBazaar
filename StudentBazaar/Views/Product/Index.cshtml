    }
    else
    {
        <form asp-action="Index" method="get" class="filter-bar">
            <div class="row g-2 align-items-end">
                <div class="col-md-5">
                    <label class="form-label">Search</label>
                    <input type="text" name="q" value="@ViewBag.CurrentQuery" class="form-control" placeholder="Product or College" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">College</label>
                    <select name="collegeId" class="form-select">
                        <option value="">All Colleges</option>
                        @if (ViewBag.Colleges != null)
                        {
                            foreach (var c in (IEnumerable<StudentBazaar.Web.Models.College>)ViewBag.Colleges)
                            {
                                var selected = (ViewBag.CurrentCollegeId != null && (int)ViewBag.CurrentCollegeId == c.Id) ? "selected" : "";
                                <option value="@c.Id" selected="@selected">@c.CollegeName</option>
                            }
                        }
