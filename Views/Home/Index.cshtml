@using StudentBazaar.Web.Models
@using System.Linq
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Product>

@{
    Layout = null;
    ViewData["Title"] = "Welcome";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - StudentBazaar</title>

    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- TOP NAV -->
    <div class="top-nav-bar">
        <div class="search-box">
            <i class="fa-solid fa-bars" id="menu-btn" onclick="openmenu()"></i>
            <i class="fa-solid fa-times" id="close-btn" onclick="closemenu()"></i>
            <img src="~/images/logo.jpg" class="logo" alt="Logo" />
            <input type="text" class="form-control" placeholder="Search..." />
            <span class="input-group-text">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
        </div>

        <div class="menu-bar">
            <ul>
                <li>
                    <a asp-controller="ShoppingCart" asp-action="Index">
                        <i class="fa-solid fa-cart-shopping"></i> Cart
                    </a>
                </li>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <li class="text-white me-2">
                        Hello, @User.Identity!.Name
                    </li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">
                                Logout
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Account" asp-action="Register">Sign up</a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- HEADER (SIDE MENU + SLIDER) -->
    <section class="header">
        <div class="side-menu" id="side-menu">
            <ul>
                <li>On Sale <i class="fa-solid fa-angle-right"></i></li>
                <li>Computer Science <i class="fa-solid fa-angle-right"></i></li>
                <li>Engineering <i class="fa-solid fa-angle-right"></i></li>
                <li>Medicine <i class="fa-solid fa-angle-right"></i></li>
                <li>Science <i class="fa-solid fa-angle-right"></i></li>
                <li>Applied Arts <i class="fa-solid fa-angle-right"></i></li>
                <li>Pharmacy <i class="fa-solid fa-angle-right"></i></li>
            </ul>
        </div>

        <div class="slider">
            <div id="slider" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/1.jpg" class="d-block w-100" alt="Slide 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/2.jpg" class="d-block w-100" alt="Slide 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/3.jpg" class="d-block w-100" alt="Slide 3">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/4.jpg" class="d-block w-100" alt="Slide 4">
                    </div>
                </div>

                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#slider" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#slider" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#slider" data-bs-slide-to="2"></button>
                    <button type="button" data-bs-target="#slider" data-bs-slide-to="3"></button>
                </div>
            </div>
        </div>
    </section>

    <!-- 🔹 سكشن الترحيب اللي طلبته -->
    <section class="py-5 bg-light border-top border-bottom">
        <div class="container">
            <div class="text-center mt-3">
                <h1 class="display-4 fw-bold">Welcome to StudentBazaar</h1>
                <p class="lead text-muted">
                    سوق طلابي لبيع وشراء الكتب والأدوات والمستلزمات الجامعية بين الطلاب.
                </p>

                <a class="btn btn-primary btn-lg mt-4"
                   asp-controller="Product"
                   asp-action="Index">
                    🔍 تصفّح المنتجات المتاحة
                </a>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="mt-3">
                        <a class="btn btn-outline-success"
                           asp-controller="Product"
                           asp-action="Create">
                            + اعرض منتج للبيع
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- FEATURED CATEGORIES (ثابتة) -->
    <section class="featured-categories">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/images/computer science.jpg" alt="Computer Science">
                </div>
                <div class="col-md-4">
                    <img src="~/images/engineering.jpg" alt="Engineering">
                </div>
                <div class="col-md-4">
                    <img src="~/images/med.jpg" alt="Medicine">
                </div>
            </div>
        </div>
    </section>

    <!-- ON SALE (ديناميك من الـ Products) -->
    <section class="on-sale py-4">
        <div class="container">
            <div class="title-box">
                <h2>On Sale / Latest Products</h2>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    لا توجد منتجات حالياً.
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <span> يمكنك إضافة منتج من صفحة <a asp-controller="Product" asp-action="Create">Create Product</a>.</span>
                    }
                    else
                    {
                        <span> قم بـ <a asp-controller="Account" asp-action="Login">تسجيل الدخول</a> لعرض وبيع منتجاتك.</span>
                    }
                </div>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var item in Model.Take(8))
                    {
                        var mainImage = item.Images?.FirstOrDefault(img => img.IsMainImage)
                        ?? item.Images?.FirstOrDefault();

                        <div class="col-6 col-md-3">
                            <div class="product-top">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                    @if (mainImage != null)
                                    {
                                        <img src="@mainImage.ImageUrl"
                                             alt="@item.Name"
                                             class="img-fluid"
                                             style="height: 200px; width: 100%; object-fit: cover;"
                                             onerror="this.src='/images/placeholder.png'; this.onerror=null;" />
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-center align-items-center bg-light"
                                             style="height:200px;">
                                            <span class="text-muted">No image</span>
                                        </div>
                                    }
                                </a>

                                <div class="overlay-right">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-secondary" title="Quick View">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>

                                    @if (User.Identity?.IsAuthenticated ?? false)
                                    {
                                        <button type="button" class="btn btn-secondary" title="Wishlist">
                                            <i class="fa-solid fa-heart"></i>
                                        </button>
                                        <button type="button" class="btn btn-secondary" title="Buy">
                                            <i class="fa-solid fa-cart-shopping"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login"
                                           class="btn btn-secondary" title="Login to buy">
                                            <i class="fa-solid fa-cart-shopping"></i>
                                        </a>
                                    }
                                </div>
                            </div>

                            <div class="product-bottom text-center">
                                <h5 class="mb-1">@item.Name</h5>
                                <small class="text-muted d-block">
                                    @item.Category?.CategoryName
                                </small>
                                <h6 class="text-success fw-bold">
                                    @item.Price.ToString("C")
                                </h6>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>

    <!-- SECTION تاني ثابت -->
    <section class="website-features">
        <div class="container">
            <div class="row">
                <div class="col-md-3 feature-box">
                    <img src="~/images/satisfaction.jpg" alt="Satisfaction">
                    <div class="feature-text">
                        <p><b>100% Trusted Items </b> are available at website</p>
                    </div>
                </div>
                <div class="col-md-3 feature-box">
                    <img src="~/images/return.jpg" alt="Return">
                    <div class="feature-text">
                        <p><b>Return within 5 days </b> of receiving your order.</p>
                    </div>
                </div>
                <div class="col-md-3 feature-box">
                    <img src="~/images/delivery.jpg" alt="Delivery">
                    <div class="feature-text">
                        <p><b>Get free delivery </b> for your first order.</p>
                    </div>
                </div>
                <div class="col-md-3 feature-box">
                    <img src="~/images/payment.jpg" alt="Payment">
                    <div class="feature-text">
                        <p><b>Pay Online </b> (Vodafone cash/Instapay).</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FOOTER -->
    <section class="footer">
        <div class="container tex-center">
            <div class="row">
                <div class="col-md-3">
                    <h1>Useful links</h1>
                    <p>Privacy Policy</p>
                    <p>Terms Of Use</p>
                    <p>Return Policy</p>
                    <p>Discount Coupons</p>
                </div>
                <div class="col-md-3">
                    <h1>Company </h1>
                    <p>About Us</p>
                    <p>Contact Us</p>
                    <p>Career</p>
                    <p>Affiliate</p>
                </div>
                <div class="col-md-3">
                    <h1>Follow Us On </h1>
                    <p><i class="fa-brands fa-square-facebook"></i> Facebook</p>
                    <p><i class="fa-brands fa-youtube"></i> Youtube</p>
                    <p><i class="fa-brands fa-linkedin-in"></i> LinkedIn</p>
                    <p><i class="fa-brands fa-twitter"></i> Twitter</p>
                </div>
                <div class="col-md-3 footer-image">
                    <h1>Download App</h1>
                    <img src="~/images/app.jpg" alt="App">
                </div>
            </div>
            <hr />
            <p class="copyright">Made By Hoda Saraya</p>
        </div>
    </section>

    <script>
        function openmenu() {
            document.getElementById("side-menu").style.display = "block";
            document.getElementById("menu-btn").style.display = "none";
            document.getElementById("close-btn").style.display = "block";
        }
        function closemenu() {
            document.getElementById("side-menu").style.display = "none";
            document.getElementById("menu-btn").style.display = "block";
            document.getElementById("close-btn").style.display = "none";
        }
    </script>

    <style>
        .product-top {
            position: relative;
            overflow: hidden;
        }

            .product-top img {
                transition: transform .2s ease;
            }

            .product-top:hover img {
                transform: scale(1.03);
            }

        .overlay-right {
            position: absolute;
            top: 8px;
            right: 8px;
            display: flex;
            flex-direction: column;
            gap: 4px;
            opacity: 0;
            transition: opacity .2s ease;
        }

        .product-top:hover .overlay-right {
            opacity: 1;
        }
    </style>
</body>
</html>
