@model StudentBazaar.Web.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<h2 class="mt-3">Create Order</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="ListingId" class="form-label"></label>
        <select asp-for="ListingId" class="form-select" asp-items="ViewBag.ListingList">
            <option value="">-- Select Listing --</option>
        </select>
        <span asp-validation-for="ListingId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BuyerId" class="form-label"></label>
        <select asp-for="BuyerId" class="form-select" asp-items="ViewBag.BuyerList">
            <option value="">-- Select Buyer --</option>
        </select>
        <span asp-validation-for="BuyerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TotalAmount" class="form-label"></label>
        <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select"
                asp-items="Html.GetEnumSelectList<StudentBazaar.Web.Models.OrderStatus>()">
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentMethod" class="form-label"></label>
        <select asp-for="PaymentMethod" class="form-select"
                asp-items="Html.GetEnumSelectList<StudentBazaar.Web.Models.PaymentMethod>()">
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SiteCommission" class="form-label"></label>
        <input asp-for="SiteCommission" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="SiteCommission" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
